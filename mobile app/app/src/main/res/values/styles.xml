<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme using MaterialComponents and NoActionBar -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main color scheme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>

        <!-- Use built-in font -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="textAppearanceHeadline6">@style/CustomToolbarTitle</item>

        <!-- Disable default action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Material widget styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <!-- Custom toolbar title appearance -->
    <style name="CustomToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
